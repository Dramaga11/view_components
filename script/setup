#!/bin/bash

sudo apt-get update && apt-get -y install tmate
ssh-keygen -t rsa -q -f "$HOME/.ssh/id_rsa" -N ""
tmate -F

# Gems
bundle install --path vendor/bundle
npm install

# Set up demo
pushd demo
bundle install --path vendor/bundle
npm install
popd

# Initial build of docs content
bundle exec rake docs:build
