<%= show_button %>
<dialog-helper>
  <%= render Primer::BaseComponent.new(**@system_arguments) do %>
    <%= header %>
    <% if content.present? %>
      <%= content %>
    <% else %>
      <scrollable-region data-labelled-by="<%= labelledby %>">
        <% if banner.present? %>
          <div role="status">
            <%= banner %>
          </div>
        <% end %>
        <%= body %>
      </scrollable-region>
      <%= footer %>
    <% end %>
  <% end %>
</dialog-helper>
